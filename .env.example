# GitHub App Configuration
GITHUB_APP_ID=123456
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----"
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# Augment AI Configuration
AUGMENT_API_KEY=your-augment-api-key-here
AUGMENT_API_URL=https://api.augmentcode.com

# Codex Configuration
# Comma-separated list of Codex bot usernames to detect
CODEX_USERNAMES=codex,codex-bot,codex-reviewer

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration (if using persistent storage)
DATABASE_URL=postgresql://user:password@localhost:5432/augmentbot

# Temporary Directory for Git Operations
TEMP_DIR=/tmp/augmentbot

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_OPERATIONS=10

# Security
JWT_SECRET=your-jwt-secret-here
WEBHOOK_TIMEOUT=30000

# Monitoring
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true

# Feature Flags
ENABLE_AUTO_FIXES=true
ENABLE_MULTI_REVIEWER=true
ENABLE_CONFLICT_RESOLUTION=false